<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.executor" name="Script Executor" version="0.3" provider-name="pmosbach">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="xbmc.json" version="6.0.0"/>
        <import addon="script.module.simplejson" version="2.0.10" optional="true"/>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="executor.py" >
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <language/>
        <summary lang="en">This Addon enables script execution using the JSON-RPC API</summary>
        <description lang="en">Addon to deal with inability of JSON-RPC API to Execute Scripts.</description>
        <platform>all</platform>
    </extension>
</addon>
